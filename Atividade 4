    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="caixa">Texto original</div>
    <button id="button">Clique</button>

    <script>
        var msg = document.getElementById ("caixa")
        var botão = document.getElementById ("button")

        botão.addEventListener("click", clique)

        function clique(){
            msg.textContent = "Novo texto simples!"
        }
    </script>
</body>
</html>
